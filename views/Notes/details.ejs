<html lang="en">
<%- include("../partial/head.ejs") %>

<body>
  <%- include("../partial/nav.ejs") %>

  <div class="details content">
    <h2><%= note.title %></h2>
    <div class="content">
      <p><%= note.body %></p>
    </div>
    <a class="delete" data-doc="<%= note._id %>">delete</a>
  </div>

  <%- include("../partial/footer.ejs") %>

  <script>
      const traschen = document.querySelector('a.delete');
      traschen.addEventListener('click', (e) =>{
          const endpoint = `/notes/${traschen.dataset.doc}`;
            
            fetch(endpoint,{
                method:'DELETE'
            })
            .then((response)=> response.json())
            .then((data) => {
                console.log(data);
                window.location.href = data.redirect
            })
          .catch(err=> console.log(err));
      })
  </script>
</body>
</html>